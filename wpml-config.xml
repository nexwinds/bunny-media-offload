<?xml version="1.0" encoding="utf-8"?>
<wpml-config>
    <settings>
        <!-- Plugin settings that should be shared across all languages -->
        <language-selector-options>
            <key name="bunny_media_offload_settings">
                <key name="api_key" />
                <key name="storage_zone" />
                <key name="custom_hostname" />
                <key name="delete_local" />
                <key name="file_versioning" />
                <key name="allowed_file_types" />
                <key name="allowed_post_types" />
                <key name="batch_size" />
                <key name="enable_logs" />
                <key name="log_level" />
                <key name="optimization_enabled" />
                <key name="optimization_format" />
                <key name="optimization_max_size" />
                <key name="optimization_batch_size" />
            </key>
        </language-selector-options>
    </settings>
    
    <!-- Admin strings for translation -->
    <admin-texts>
        <key name="bunny_media_offload_admin_strings">
            <key name="dashboard_title">Dashboard</key>
            <key name="settings_title">Settings</key>
            <key name="migration_title">Migration</key>
            <key name="optimization_title">Optimization</key>
    
            <key name="logs_title">Logs</key>
            <key name="files_offloaded">Files Offloaded</key>
            <key name="space_saved">Space Saved</key>
            <key name="migration_progress">Migration Progress</key>
            <key name="monthly_savings">Monthly Savings</key>
            <key name="images_optimized">Images Optimized</key>
            <key name="optimization_savings">Optimization Savings</key>
            <key name="compression_ratio">Compression Ratio</key>
            <key name="test_connection">Test Connection</key>
            <key name="start_migration">Start Migration</key>
            <key name="optimize_images">Optimize Images</key>
            <key name="settings_nav">Settings</key>
        </key>
    </admin-texts>
    
    <!-- Custom fields that should be copied/synchronized -->
    <custom-fields>
        <custom-field action="copy">_bunny_optimized</custom-field>
        <custom-field action="copy">_bunny_optimization_data</custom-field>
        <custom-field action="copy">_bunny_last_optimized</custom-field>
        <custom-field action="copy">_bunny_offloaded</custom-field>
        <custom-field action="copy">_bunny_url</custom-field>
        <custom-field action="copy">_bunny_file_size</custom-field>
    </custom-fields>
    
    <!-- Built-in support -->
    <built-with-types>
        <type translate="1">attachment</type>
    </built-with-types>
</wpml-config> 